{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": [
    {
      "target": "main",
      "public": "src/public",
      "predeploy": "yarn next:build",
      "rewrites": [
        {
          "source": "!/_next/static/**",
          "function": "next"
        }
      ]
    }
  ],
  "functions": {
    "source": ".",
    "predeploy": "yarn build"
  }
}