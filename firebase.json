{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": [
    {
      "target": "main",
      "public": "src/public",
      "predeploy": "yarn next:build",
      "rewrites": [
        {
          "source": "**/**",
          "function": "next"
        }
      ]
    },
    {
      "target": "static",
      "public": ".static",
      "headers": [
        {
          "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
          "headers": [
            {
              "key": "Access-Control-Allow-Origin",
              "value": "*"
            }
          ]
        }
      ]
    }
  ],
  "functions": {
    "source": ".",
    "predeploy": "yarn build"
  }
}