{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": [
    {
      "target": "main",
      "public": "src/public",
      "predeploy": "yarn next:build",
      "rewrites": [
        {
          "source": "!/_next/static/**",
          "function": "next"
        }
      ],
      "headers": [
        {
          "source": "/_next/static/**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=31536000"
            }
          ]
        }
      ]
    }
  ],
  "functions": {
    "source": ".",
    "predeploy": "yarn build"
  }
}