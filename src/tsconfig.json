{
  "extends": "@yarnaimo/tss/tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "outDir": "dist",
    "lib": [
      "dom",
      "dom.iterable",
      "es2018"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/@types/*",
        "src/@types/*"
      ]
    },
    "types": [
      "@types/node",
      "@types/jest",
      "@emotion/core"
    ],
    "allowJs": true,
    "noEmit": true,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
